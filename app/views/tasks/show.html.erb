<%= link_to category_path(@category), :id => "back_button" do %>
    <div>
        <i class="fa-solid fa-arrow-left"></i>
        <span>Back to <%= @category.name %> </span>
    </div>
<% end %>

<%= link_to edit_task_path(@category), :id => "edit_category_link" do %>
    <span><%= @task.name %></span>
    <i class="fa-solid fa-pencil"></i>
<% end %>

<div id="task_show_container">
    <div class="data_container">
    <h4><%= @task.due.strftime("%B %d, %Y") %></h4>
    </div>

    <div class="data_container" id="notes_container">
    <h4> Notes: </h4>
    <p><%= @task.notes %></p>
    </div>
</div>

<%= link_to @task, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{@task.name}?" }, :id => "delete_category_link" do %>
    <i class="fa-regular fa-trash-can"></i>
<% end %>

